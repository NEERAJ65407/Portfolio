import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My Projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="T20 World Cup Best XI Dashboard"
    img="/post_img.webp"
    desc="Extracted and cleaned datasets by web scraping from ESPN Cricinfo, transformed with Python (Pandas) and Power Query. Built robust data models and DAX measures in Power BI to enable dynamic insights. Delivered an interactive dashboard recommending the best XI, showcasing end-to-end analytics skills."
